@{
    ViewBag.Title = "Shortest Path Calculator";
}

<h2>Shortest Path Calculator</h2>

<form id="shortestPathForm">
    <label for="fromNode">From Node:</label>
    <input type="text" id="fromNode" name="fromNode">

    <label for="toNode">To Node:</label>
    <input type="text" id="toNode" name="toNode">

    <button type="button" onclick="calculateShortestPath()">Calculate</button>
</form>

<div id="result"></div>

@section scripts {
    <script>
        function calculateShortestPath() {
            var fromNode = $("#fromNode").val();
            var toNode = $("#toNode").val();

            $.post("/Home/CalculateShortestPath", { fromNodeName: fromNode, toNodeName: toNode }, function (data) {
                var resultHtml = "Traversed Nodes: " + data.NodeNames.join(", ") + "<br>";
                resultHtml += "Total Distance: " + data.Distance;
                $("#result").html(resultHtml);
            });
        }
    </script>
}